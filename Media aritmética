#include <stdio.h>

int main() {
    int num1, num2;
    float media;

    printf("Introduzca el primer número: ");
    scanf("%d", &num1);

    printf("Introduzca el segundo número: ");
    scanf("%d", &num2);

    if (num1 > 0 && num2 > 0) {
        media = (float)(num1 + num2) / 2;
        printf("La media aritmética es: %.2f", media);
    } else {
        printf("ERROR: Datos incorrectos");
    }

    return 0;
}
