#include <stdio.h>

#define PI 3.14159265359

int main() {
    float radio, area;
    printf("Ingrese el valor del radio del circulo: ");
    scanf("%f", &radio);
    
    if (radio <= 0 || radio > 100) {
        printf("Valor no valido.\n");
    } else {
        area = PI * radio * radio;
        printf("El area del circulo es: %.2f\n", area);
    }
    
    return 0;
}
